{% extends '@App/backend/base.html.twig' %}

{% block body %}
<div class="container">
    <div id="heading-breadcrumbs">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li><a href="index.php">Messages</a>
                        </li>
                        <li>Plaintes</li>
                    </ul>
                </div>
            </div>
        </div>

    <div class="row">
            <div class="col-lg-12 text-center">
                <h3 class="bottom-bar">
                   Messages(plaintes)
                <hr>
            </div>
        </div>


    <div class="row">
         <div class="col-lg-12">
             <div class="messages-non-lu"><input type="checkbox" name="messages-non-lu" value="1"> Messages non lus<br></div>
             <div class="panel panel-defaul">
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped" id="tab_plaintes">
                                    <button class="btn btn-default pull-right">Rechercher</button>
                                     <div class="input-group margin-bottom-sm pull-right" style="width:20%;">
                                          <span class="input-group-addon"><i class="fa fa-search fa-fw fa-search-custom"></i></span>
                                          <input class="form-control" type="text" placeholder="Search">
                                    </div>
                                    <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Nom</th>
                                        <th>Objet</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody id="tab_body_plaintes">
                                        {% for p in plaintes %}
                                        <tr>
                                        <th scope="row">
                                            {{ p.date }}
                                        </th>
                                        <td>{{ p.user}}</td>
                                        <td>{{ p.object }}</td>
                                        <td>
                                              <button type="button" class="btn btn-success voir" data-toggle="collapse" data-target="{{'#voir_message_' ~ p.id}}">Voir</button>
                                            <button type="button" class="btn btn-danger supprimer" id="{{p.id}}">Supprimer</button>
                                        </td>
                                    </tr>
                                    <tr>
                                         <td style="padding:0;" colspan="4">
                                             <div id="{{'voir_message_' ~ p.id}}" class="collapse">{{ p.message }}</div></td>
                                    </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>

                               <nav class="text-center">
                                    <ul class="pagination">
                                        <li>
                                            <a href="#" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        <li><a href="#">1</a></li>
                                        <li><a href="#">2</a></li>
                                        <li><a href="#">3</a></li>
                                        <li><a href="#">4</a></li>
                                        <li><a href="#">5</a></li>
                                        <li>
                                            <a href="#" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



                {% endblock %}
