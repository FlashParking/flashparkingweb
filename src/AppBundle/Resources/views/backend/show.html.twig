{% extends '@App/backend/base.html.twig' %}

{% block body %}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    {% block javascripts %}
        <script>
            //Function To Display Popup
            function div_show() {
                document.getElementById('abc').style.display = "block";
            }
            //Function to Hide Popup
            function div_hide(){
                document.getElementById('abc').style.display = "none";
            }
            function CloseAndRefresh()
            {
                opener.location.reload(true);
                self.close();
            }

        </script>
    {% endblock %}
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#">Gestion des parkings</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <h3 class="bottom-bar">
                    Gestion des parkings
                </h3>
                <hr>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <div class="search-div">
                                    <input type="text" name="manage-search" id="manage-search"/><i class="fa fa-search" style="font-size:24px" ></i>
                                    <button class="button-search">Rechercher</button>
                                    <button id="popup" onclick="div_show()"><i class="fa fa-plus" style="width:30px; height: 20px;"></i></button>
                                </div>

                            </table>
                        </div>
                        <table>
                            <tbody>
                            {% for parking in parking %}
                                <tr>
                                    <td>
                                        <article class="parking">
                                            <h2>{{ parking.nom }}</h2>
                                            <div>
                                                {{ parking.place }}</br>
                                                {{ parking.placeLibre }}</br>
                                                {{ parking.placePrise }}</br>
                                                {{ parking.description }}</br>
                                                {{ parking.adresse }}</br>
                                                {{ parking.codePostal }}</br>
                                                {{ parking.ville }}</br>
                                                {{ parking.coordonnees }}</br>
                                            </div>
                                        </article>
                                        <button type="button" class="btn btn-success btn-gestion">Voir</button>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
