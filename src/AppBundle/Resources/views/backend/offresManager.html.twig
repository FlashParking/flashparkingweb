{% extends '@App/backend/base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#">Offres</a>
                    </li>
                    <li>En attente</li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>
                    Gestion des offres
                </h1>
            </div>
        </div>
        <div class="js-request-state"></div>
        <div class="row">
            <div class="ongletDesOffres">
                <ul>
                    <li>
                        <span id="offresManagerTab" onClick="tabOffres()">
                            Offres
                        </span>
                    </li>
                    <li>
                        <span id="tarifsManagerTab" onClick="tabTarifs()">
                            Tarifs
                        </span>
                    </li>
                    <li>
                        <span id="promotionsManagerTab" onClick="tabPromos()">
                            Promotion
                        </span>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="tab-content">
                    <div id="offresManager">
                        <!-- Trigger the modal with a button -->
                        <div id="addOffreButton">
                            <button type="button" class="btn btn-success" title="INSERT" data-toggle="modal" data-target="#myModal" data-whatever="Ajouter une offre">Ajouter une offre</button>
                        </div>
                        <h3>Offres</h3>

                    </div>
                    <div id="tarifsManager">
                        <div id="addTarifButton">
                            <button type="button" class="btn btn-success" title="INSERT" data-toggle="modal" data-target="#myModal" data-whatever="Ajouter un tarif">Ajouter</button>
                        </div>

                        {% for entity in entities %}
                        <div class="col-md-6" id="div_{{ entity.id }}">
                            <div class="offre wow bounceInUp" data-wow-delay="0ms">
                                <h2>{{ entity.libelle}}</h2>
                                    <strong>Description : </strong>
                                    {{ entity.description}}
                                    <br/>
                                    <strong>Prix : </strong>
                                    {{ entity.prix}}â‚¬
                                    <div class="buttonsUpDel">
                                        <button type="button" class="btn btn-warning" title="UPDATE" data-toggle="modal" data-target="#myModal"  class="js-update-button btn btn-warning" id="{{ entity.id }}">Modifier</button>
                                        <a href="{{ path('tarif_delete', {'id': entity.id}) }}">
                                            <button class="btn btn-danger">Supprimer</button>
                                        </a>
                                    </div>
                            </div>
                        </div>

                        {% endfor %}
                        <div class="col-md-6">
                            <div class="offre wow bounceInUp" data-wow-delay="0ms">
                            </div>
                        </div>
                    </div>
                    <div id="promotionsManager">
                        <div id="addPromoButton">
                            <button type="button" class="btn btn-success" title="INSERT" data-toggle="modal" data-target="#myModal" data-whatever="Ajouter une promotion">Ajouter une promotion</button>
                        </div>
                        <h3>Promotions</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-content-body"></div>
            </div>

        </div>
    </div>

{% endblock %}
